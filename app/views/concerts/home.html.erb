
<div class="homecontainer container-fluid">
	<div class="bannerrow row">
	<%= image_tag "rockbanner.jpg", height: 300, width: 1500 %>
	</div>
	<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand"><%= image_tag "miclogo.jpg", height: 25, width: 30 %> </a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to("Index", concerts_path)%> <span class="sr-only">(current)</span></li>
        <li><%= link_to("New event", new_concert_path) %> </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Concerts today<span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><% @concerts.each do |concert| %>
					<%= link_to(concert.name, concert_path(concert)) %>
				<br>
			<% end %>
			</li>
          </ul>
        </li>
      </ul>
      <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="#">About</a></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Contact<span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="#">Email</a></li>
            <li>Phone</li>
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
	<div class="hometoprow row">
		<div class="sidebar col-sm-4">			
			<h3>Concerts this month</h3>
			<div class="concerts">
				<% @monthsconcerts.each do |concert| %>
					<%= link_to(concert.name, concert_path(concert)) %>
						<br>
				<% end %>
			</div>
		</div>
		<div class="heading col-sm-4">
		</div>
		<div class="concertstoday col-sm-4 ">
			<h3> Top Concerts </h3>
		</div>
	</div>


</div>